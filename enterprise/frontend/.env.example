# Boundless Enterprise Multipass - Frontend Configuration
# This is the E² Multipass enterprise operating system on Boundless blockchain

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# Main enterprise backend API (connects to Boundless blockchain node)
NEXT_PUBLIC_API_URL=http://localhost:8080

# Blockchain Node RPC (if direct access needed)
NEXT_PUBLIC_BLOCKCHAIN_RPC=http://localhost:9933

# WebSocket endpoint for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_NAME=Boundless E² Multipass
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_NETWORK_NAME=Boundless
NEXT_PUBLIC_TOKEN_SYMBOL=BLS

# ============================================================================
# E² MULTIPASS FEATURES
# ============================================================================
# Core Features
NEXT_PUBLIC_ENABLE_CIVA=true
NEXT_PUBLIC_ENABLE_SMART_CONTRACTS=true
NEXT_PUBLIC_ENABLE_DOCUMENT_STORAGE=true
NEXT_PUBLIC_ENABLE_INTERNAL_MARKETS=true

# Authentication & Security
NEXT_PUBLIC_ENABLE_WEBAUTHN=true
NEXT_PUBLIC_ENABLE_NFC_HARDWARE_PASS=true
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Advanced Features
NEXT_PUBLIC_ENABLE_IBC_SESSIONS=true
NEXT_PUBLIC_ENABLE_PDE_SNAPSHOTS=true
NEXT_PUBLIC_ENABLE_CODE_SIGNING=true
NEXT_PUBLIC_ENABLE_AI_AGENTS=true
NEXT_PUBLIC_ENABLE_KNOWLEDGE_VAULT=true
NEXT_PUBLIC_ENABLE_COLLABORATION_CAPSULES=true

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# Post-Quantum Cryptography Settings
NEXT_PUBLIC_PQC_ALGORITHM=ML-DSA-44
NEXT_PUBLIC_HASH_ALGORITHM=SHA3-256

# Transaction Settings
NEXT_PUBLIC_DEFAULT_GAS_LIMIT=1000000
NEXT_PUBLIC_BLOCK_TIME=10

# ============================================================================
# SECURITY & COMPLIANCE
# ============================================================================
# Session Management
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_IDLE_TIMEOUT=900000

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=100

# Compliance
NEXT_PUBLIC_REQUIRE_KYC=true
NEXT_PUBLIC_MIN_AML_SCORE=30

# ============================================================================
# DEVELOPER SETTINGS
# ============================================================================
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
